<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <!-- Font Awesome -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
    href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
    rel="stylesheet"
    />
    <!-- MDB -->
    <link
    href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.2.0/mdb.min.css"
    rel="stylesheet"
    />
    <link rel="shortcut icon" href="https://upload.wikimedia.org/wikipedia/en/a/a3/Logo_of_Andhra_Loyola_Institute_of_Engineering_and_Technology.png" type="image/x-icon">
</head>
<body style="background-color: #eeee;">
    <section style="background-color: #eee;">
        <div class="container py-5">
          <div class="row">
            <div class="col">
              <nav aria-label="breadcrumb" class="bg-light rounded-3 p-3 mb-3">
                <ol class="breadcrumb mb-0 d-flex" style="justify-content: space-between;">
                  <li class="breadcrumb-item"><a href="/view-all" style="text-decoration: none;color: #000;">‚¨ÖÔ∏èBack</a></li>
                  <div class="d-flex">
                    <li class="breadcrumb-item"><a href="/" style="text-decoration: none;color: black;">üåêVisit website</a></li>
                    <li class="breadcrumb-item"><a href="/logout" style="text-decoration: none;color: black;">‚Ü©Logout</a></li>
                  </div>
                </ol>
              </nav>
            </div>
          </div>
      
          <div class="row">
            <div class="col-lg-4">
              <div class="card mb-4">
                <div class="card-body text-center">
                  <img src="<%= job.company_image %>" alt="avatar"
                    class="rounded-circle img-fluid" style="width: 150px; height: 150px;">
                  <h5 class="my-3"><%= job.company %></h5>
                  <p class="text-muted mb-4"><%= job.job_description %></p>
                  <div class="d-flex justify-content-center mb-2">
                    <% console.log(user.eligibility,job.eligibility) %>
                    <form action="/apply/<%= job._id %>" method="post">
                      <% if(user.percentage>=job.eligibility && applied == 0 && (new Date(job.job_deadline) > Date.now())){ %><button type="submit" class="btn btn-outline-info ms-1">ApplyüìÉ</button><% } %>
                    </form>
                    <% if(applied == 1){ %><button type="button" disabled class="btn btn-outline-info ms-1">Already Applied</button><% } %>
                    <% if(job.eligibility>user.percentage){ %><button type="button" disabled class="btn btn-outline-info ms-1">Not Eligible</button><% } %>
                    <a href="<%= job.link %>" target="_blank"><button type="button" class="btn btn-outline-primary ms-1">Visit website‚ÜóÔ∏è</button></a>
                  </div>
                </div>
              </div>
            </div>
            <div class="col-lg-8">
              <div class="card mb-4">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Status</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0 d-flex" style="align-items: center;"><span style="font-size: 12px;"><%= (new Date(job.job_deadline) > Date.now())?"üü¢":"üî¥" %></span><%= (new Date(job.job_deadline) > Date.now())?"Active":"Expired" %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Package</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0 d-flex" style="align-items: center;"><%= job.job_salary %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Last Date</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0 d-flex" style="align-items: center;"><%= job.job_deadline %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Role</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0 d-flex" style="align-items: center;"><%= job.role %></p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Eligibility Criteria</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0 d-flex" style="align-items: center;"><%= job.eligibility %>%</p>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <p class="mb-0">Location</p>
                    </div>
                    <div class="col-sm-9">
                      <p class="text-muted mb-0 d-flex" style="align-items: center;"><%= job.location %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-lg-12">
              <div class="card mb-4">
                <div class="card-body">
                  <h5 class="mb-3 text-center">Job DescriptionüìÉ</h5>
                  <p><%= job.description %></p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</html>
